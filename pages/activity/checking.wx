<template>
    <view>
        <!-- 自定义导航栏 -->
        <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'#FFFFFF'} }}">
            <ui-row height="{{DEFAULT_HEADER_HEIGHT}}" class="nav_bar">
                <ui-col vertical-align="middle" class="nav-bar-col" align="left" width="100px" bindtap="navigateBack">
                    <view class="containertitle">
                        <view class='dingwei'>
                            <ui-icon type="zuojiantou" color="#333333" size="20px;"></ui-icon>
                        </view>
                    </view>
                </ui-col>
                <ui-col vertical-align="middle" class="nav-bar-col">
                    <view class="nav-bar-title">社团认证</view>
                </ui-col>
                <ui-col vertical-align="middle" class="nav-bar-col" align="right"  width="100px">
                </ui-col>
            </ui-row>
        </ui-nav-bar>
        <view style="height:{{NAV_HEIGHT}}"></view>
        <view class='content'>
            <form bindsubmit="formSubmit">
                <view class="row-column-group">
                    <view class="row-column">
                        <view class="label">真实姓名：</view>
                        <view class="content">
                            <view class="placep">
                                <input name="uid" value="{{uid}}" hidden/>
                                <input name="realname" value="{{realname}}" placeholder="请输入真实姓名"/>
                            </view>
                        </view>
                    </view>
                    <view class="row-column">
                        <view class="label">社区名称：</view>
                        <view class="content">
                            <view class="placep">
                                <input name="groupname" type="groupname" value="{{groupname}}" placeholder="请输入50位以下社区名称"/>
                            </view>
                        </view>
                    </view>
                    <view class="image-group">
                        <view class="imagedes">上传证明材料</view>
                        <button class="image_btn" bindtap="choosePositive">
                            <view class="image" wx:if="{{localPositive == ''}}">
                                <image src="../../static/image/jianzhi/cailiao.png" mode="aspectFill"/>
                            </view>
                            <view class="image" wx:else>
                                <image src="{{localPositive}}" mode="aspectFill"/>
                            </view>
                            <input name="material" value="{{serverPositive}}" hidden/>
                        </button>
                    </view>
                </view>
                <!-- 公众号关注引导 -->
                <official-account></official-account>
                <!-- 底部授权信息 -->
                <view class="footer">
                    <view class="page__bd page__bd_spacing">
