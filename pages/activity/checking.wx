<script>

import { $init, $digest } from '../../static/utils/common.util'
import WxValidate from '../../static/utils/WxValidate.js'

export default {
    config: {
        navigationBarTitleText: '社团认证',
        navigationBarTextStyle: 'black',
        backgroundColor: "#F8F8F8",
        backgroundTextStyle: "light",
    },
    data: {
        NAV_HEIGHT:wx.STATUS_BAR_HEIGHT+wx.DEFAULT_HEADER_HEIGHT+'px',
        DEFAULT_HEADER_HEIGHT: wx.DEFAULT_HEADER_HEIGHT,
        uid: '',                // 用户标识
        localPositive: '',      // 正面证件照本地路径
        serverPositive: '',     // 正面证件照网络路径
        localReverse: '',       // 反面证件照本地路径
        serverReverse: '',      // 反面证件照本地路径
    },
    onLoad(options) {
        $init(this)
        if (options.uid) {
            this.setData({
                uid: options.uid
            })
        }
        this.initValidate()
        wx.showShareMenu({
            withShareTicket: true
        })
    },
    // 初始化表单校验
    initValidate(){
        // 验证字段的规则
        const rules = {
            name: {
                required: true,
            },
            // idcard: {
            //     required: true,
            //     idcard: true,
            // },
            positive: {
                required: true,
            },
            reverse: {
                required: true,
            },
        }
        // 验证字段的提示信息，若不传则调用默认的信息
        const messages = {
            realname: {
                required: '真实姓名不予许为空！',
            },
            idcard: {
                required: '请输入50位以下社团名称',
                idcard: '身份证号格式不正确！',
            },
            positive: {
                required: '正面证照不予许为空！',
            },
            reverse: {
                required: '反面证照不允许为空！',
            },
        }
        // 创建实例对象
        this.validate = new WxValidate(rules, messages)
    },
    choosePositive(e) {
        var that = this;
        wx.chooseImage({
            sizeType: ['original', 'compressed'],   //可选择原图或压缩后的图片
            sourceType: ['album', 'camera'],        //可选择性开放访问相册、相机
            success: res => {
                const images = res.tempFilePaths
                that.data.localPositive = images[0]
                wx.uploadFile({
                    url: 'https://wx.taoyuantoday.com/upload/alone', //仅为示例，非真实的接口地址
                    filePath: images[0],
                    name: 'file',
                    success (res) {
                        const result = JSON.parse(res.data)
                        that.data.serverPositive = result.url
                        $digest(that)
                    }
                })
            }
        })
    },
    chooseReverse(e) {
        var that = this;
        wx.chooseImage({
            sizeType: ['original', 'compressed'],   //可选择原图或压缩后的图片
            sourceType: ['album', 'camera'],        //可选择性开放访问相册、相机
            success: res => {
                const images = res.tempFilePaths
                that.data.localReverse = images[0]
                wx.uploadFile({
                    url: 'https://wx.taoyuantoday.com/upload/alone', //仅为示例，非真实的接口地址
                    filePath: images[0],
                    name: 'file',
                    success (res) {
                        const result = JSON.parse(res.data)
                        that.data.serverReverse = result.url
                        $digest(that)
                    }
                })
            }
        })
    },
    formSubmit(e) {
        var that = this
        var data = e.detail.value

        // wx.showLoading({
        //     title: '请稍后...',
        //     mask: true
        // })

        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Weactivity/dochecking.html',
            data: {
                uid: data.uid,
                realname: data.realname,
                groupname: data.groupname,
                material: data.material,

            },
            header: {
                'Content-Type': 'application/x-www-form-urlencoded'     // 默认值
            },
            method: "POST",
            success(res) {

                if (res.data.status) {
                    wx.hideLoading()
                    wx.showToast({
                        title: res.data.result,
                        icon: 'success',
                        duration: 2000
                    })
                    
                    wx.navigateTo({
                        url: './index'
                    })

                } else {
                    wx.showToast({
                        title: res.data.result,
                        icon: 'none',
                        duration: 2000
                    })
                }
            }
        })
    },
    // 客服消息
    handleContact(e) {
        console.log(e.path)
        console.log(e.query)
    },
    // 导航返回
    navigateBack () {
        wx.navigateBack()
    },
}
</script>

