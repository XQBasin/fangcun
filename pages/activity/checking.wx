                        </view>
                    </view>
                </view>
                <!-- 底部导航 -->
                <ui-fixed-view bottom="0" left="0" right="0">
                    <view class="btn">
                        <button form-type="submit" class="button-style-huodong"><text>提交认证</text></button>
