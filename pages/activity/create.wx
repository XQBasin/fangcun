<script>
import { $init, $digest } from '../../static/utils/common.util'
import WxValidate from '../../static/utils/WxValidate.js'
export default {
    config: {
        navigationBarTitleText: '发布活动',
        navigationBarTextStyle: 'black',
        backgroundColor: "#888888",
        backgroundTextStyle: "light",
    },
    data: {
        NAV_HEIGHT:wx.STATUS_BAR_HEIGHT+wx.DEFAULT_HEADER_HEIGHT+'px',
        DEFAULT_HEADER_HEIGHT: wx.DEFAULT_HEADER_HEIGHT,
        titleCount: 0,      // 标题字数
        contentCount: 0,    // 正文字数
        localSrc: '',       // 本地路径
        serverSrc: '',      // 服务器路径
        onFocus: false,     // textarea焦点是否选中
        isShowText: false,  // 控制显示 textarea 还是 text
        switch: true,       // 默认同意加入流量增长计划
        items: [{
            name: '1',
            value: '我同意《方寸奶爸服务协议》',
            checked: false
        }],
        showtype: true,     // 默认为线上活动
        showmore: false,    // 显示更多状态关闭
        typeitems: [{
            name: '1',
            value: '线下',
            checked: true
        },{
            name: '0',
            value: '线上'
        }],
        uid: '',            // 用户标识
        configsid: '',      // 报名字段自定义配置标识
        phone: '',          // 举办方联系方式
    },
    onLoad(options) {
        this.initValidate()
        this.data.uid = options.uid
        $init(this)
        if (options.configsid) {
            this.setData({
                configsid: options.configsid
            })
        }
    },
    // 初始化表单校验
    initValidate(){
        // 验证字段的规则
        const rules = {
            image: {
                required: true,
            },
            title: {
                required: true,
            },
            startdate: {
                required: true,
            },
            starttime: {
                required: true,
            },
            enddate: {
                required: true,
            },
            endtime: {
                required: true,
            },
            content: {
                required: true,
            },
        }
        // 验证字段的提示信息，若不传则调用默认的信息
        const messages = {
            image: {
                required: '请先选择活动海报！',
            },
            title: {
                required: '请输入活动主题！',
            },
            startdate: {
                required: '请选择开始日期！',
            },
            starttime: {
                required: '请选择开始时间！',
            },
            enddate: {
                required: '请选择结束日期！',
            },
            endtime: {
                required: '请选择结束时间！',
            },
            content: {
                required: '请描述活动详情！',
            },
        }
        // 创建实例对象
        this.validate = new WxValidate(rules, messages)
    },
    handleTitleInput(e) {
        const value = e.detail.value
        this.data.title = value
        this.data.titleCount = value.length     //计算已输入的标题字数
        $digest(this)
    },
    handleContentInput(e) {
        const value = e.detail.value
        this.data.content = value
        this.data.contentCount = value.length       //计算已输入的正文字数
        $digest(this)
    },
    chooseImage(e) {
        var that = this;
        wx.chooseImage({
            sizeType: ['original', 'compressed'],   //可选择原图或压缩后的图片
            sourceType: ['album', 'camera'],        //可选择性开放访问相册、相机
            success: res => {
                const images = res.tempFilePaths
                that.data.localSrc = images[0]
                wx.uploadFile({
                    url: 'https://wx.taoyuantoday.com/upload/alone', //仅为示例，非真实的接口地址
                    filePath: images[0],
                    name: 'file',
                    success (res) {
                        const result = JSON.parse(res.data)
                        that.data.serverSrc = result.data.url
                        $digest(that)
                    }
                })
            }
        })
    },
    bindStartDateChange: function(e) {
        const value = e.detail.value
        this.data.startdate = value
        $digest(this)
    },
    bindStartTimeChange: function(e) {
        const value = e.detail.value
        this.data.starttime = value
        $digest(this)
    },
    bindEndDateChange: function(e) {
        const value = e.detail.value
        this.data.enddate = value
        $digest(this)
    },
    bindEndTimeChange: function(e) {
        const value = e.detail.value
        this.data.endtime = value
        $digest(this)
    },
    bindAddressChange: function(e) {
        const value = e.detail.value
        this.data.address = value
        $digest(this)
    },
    onShowTextare() {                   //显示textare
        this.data.isShowText = false
        this.data.onFacus = true
        $digest(this)
    },
    onShowText() {                      // 显示text
        this.data.isShowText = true
        this.data.onFacus = false
        $digest(this)
    },
    onContentInput(event) {              // 保存输入框填写内容
        var value = event.detail.value
        this.data.content = value
        this.data.isShowText = true
        this.data.onFacus = false
        $digest(this)
    },
    switchChange: function (e) {
        var value = e.detail.value
        this.data.switch = value
        $digest(this)
    },
    checkboxChange: function(e) {
        var value = e.detail.value
        this.data.agree = value.length
        $digest(this)
    },
    formSubmit(e) {
        var that = this
        var data = e.detail.value
        // 校验表单
        if (!this.validate.checkForm(data)) {
            const error = this.validate.errorList[0];
            wx.showToast({
                title: error.msg,
                icon: 'none'
            })
            return false
        }
        if (!data.agree[0]) {
            wx.showToast({
                title: '必须同意方寸奶爸服务协议才可继续。',
                icon: 'none'
            })
            return false
        }
        wx.showLoading({
            title: '请稍后...',
            mask: true
        })
        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Weactivity/create.html',
            data: {
                title: data.title,
                image: data.serverSrc,
                startdate: data.startdate,
                starttime: data.starttime,
                enddate: data.enddate,
                endtime: data.endtime,
                address: data.address,
                addressdes: data.addressdes,
                content: data.content,
                switch: data.switch,
                configsid: that.data.configsid,
                phone: that.data.phone,
                uid: that.data.uid
            },
            header: {
                'Content-Type': 'application/x-www-form-urlencoded'     // 默认值
            },
            method: "POST",
            success(res) {
                if (res.data) {
                    wx.hideLoading()
                    wx.showToast({
                        title: '发布成功',
                        icon: 'success',
                        duration: 2000
                    })
                    wx.navigateBack()
                } else {
                    wx.showToast({
                        title: '发布失败',
                        icon: 'none',
                        duration: 2000
                    })
                }
            }
        })
    },
    // 活动属性切换
    typeChange: function (e) {
        var value = e.detail.value
        this.setData({
            showtype:value
        })
    },
    // 获取路由页面
    navigateToFieldSet: function (e) {
        let route = e.currentTarget.dataset.route
        wx.navigateTo({
            url: './' + route + '?uid=' + this.data.uid
        })
    },
    // 更多显示属性切换
    showTypeChange: function (e) {
        var value = e.target.dataset.value
        this.setData({
            showmore:value
        })
    },
    // 客服消息
    handleContact(e) {
        console.log(e.path)
        console.log(e.query)
    },
    // 导航返回
    navigateBack () {
        wx.navigateBack()
    },
}
</script>

